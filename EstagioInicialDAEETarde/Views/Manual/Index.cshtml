@model IEnumerable<Git>;

@{
    ViewData["Title"] = "Manual";
}

<nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
        <div class="navbar-brand">Manual</div>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-link" asp-action="Index">Git Flow</a>
                <a class="nav-link" asp-action="Jquery">JQuery</a>
                <a class="nav-link" asp-action="Mvc">MVC</a>
                <a class="nav-link" asp-action="Scrum">Scrum</a>
            </div>
        </div>
    </div>
</nav>


<div class="bgPersonal">
    <div class="manualTitle">Estágio Inicial DAEE</div>
</div>

<section id="section-01">
      <h2 class="bef-title">GIT FLOW</h2>
      
      <div class="row">
        <div class="accordion accordion-flush col-sm-6" id="accordionFlushExample">

            @foreach(var item in Model)
            {
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#@item.Id" aria-expanded="false" aria-controls="">
                            <strong>@item.Titulo</strong>
                        </button>
                    </h2>
                    <div id="@item.Id" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                        <div class="accordion-body">@item.Descricao</div>
                    </div>
                </div>
            }
        </div>
        
        <div class="image col-sm-6">
            <img src="~/img/git_flow-scaled.jpg"/>
        </div>
      </div>
      
  </section>

