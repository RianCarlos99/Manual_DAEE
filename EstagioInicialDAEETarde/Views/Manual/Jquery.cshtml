@model IEnumerable<Jquery>

@{
    ViewData["Title"] = "Manual";
    string nomeImg;
}

<nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
        <div class="navbar-brand">Manual</div>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-link" asp-action="Index">Git Flow</a>
                <a class="nav-link" asp-action="Jquery">JQuery</a>
                <a class="nav-link" asp-action="Mvc">MVC</a>
                <a class="nav-link" asp-action="Scrum">Scrum</a>
            </div>
        </div>
    </div>
</nav>

<div class="bgPersonal">
    <div class="manualTitle">Estágio Inicial DAEE</div>
</div>

<section id="section-02">
    <h2 class="bef-title">JQuery</h2>

    <div class="container-grid">

        @foreach(var item in Model)
        {
            nomeImg = $"jquery0{item.Id}.jpg";

            <div class="cardImage" style="background: url(/img/@nomeImg) no-repeat center center; background-size: cover">
                <div class="content">@Html.Raw(item.Conteudo)</div>
                <div class="title">@item.Titulo</div>
            </div>
        }
    </div>

</section>